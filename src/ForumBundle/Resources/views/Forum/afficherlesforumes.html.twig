{% extends "default/LayoutFront.html.twig" %}
{% block section %}

    {% for forum in forums %}
        {% if forum.Etat == 1 %}
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                    <div class="login-content">
                        <div class="form-group">
                            <a href="#">Added :{{ forum.date | date("m/d/Y") }}  </a>
                            <br>
                            <h4>{{ censorF.censorString(forum.descriptionF  )['clean'] | raw
                                }} </h4>

                            <p>Published by :  <b>{{ forum.idUser.username }}</b></p>
                             <a href="{{ path('details', { 'id': forum.idF }) }}" class="generic-btn info-border radius"><i class="fa fa-external-link-square" style="font-size:30px; color:royalblue"></i> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    {% endfor %}


    <div style="padding-left: 625px;padding-top: 10px" class="oneMusic-pagination-area wow fadeInUp" data-wow-delay="300ms">
        {{ knp_pagination_render(forums) }}
    </div>

{% endblock %}